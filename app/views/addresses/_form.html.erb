<%= form_with(model: address, local: true) do |form| %>
  <% if address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(address.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
      <% address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" >
        <%= form.label :addtype %>
        <%= form.select :addtype,options_for_select(["billing address","shipping address"]), class: "form-control" %>
  </div> 
  <div class="field">
    <%= form.label :land_mark %>
    <%= form.text_field :land_mark, :required=>true %>
  </div>

  <div class="field">
    <%= form.label :street %>
    <%= form.text_field :street, :required=>true %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city, :required=>true %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.text_field :state, :required=>true %>
  </div>

  <div class="field">
    <%= form.label :zip %>
    <%= form.number_field :zip, :required=>true %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, :required=>true %>
  </div>
  <div class="field">
    <%= form.label :order_id %>
    <%= form.text_field :order_id, :required=>true %>
  </div>
  <div class="field">
    <%= form.hidden_field :user_id, :value=>current_user.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
